    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentRetrieveLocation">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/retrieveLocationFragment"
        android:layout_width="match_parent"
